---
const schedules = [
    {
        day: "Domingos",
        time: "9:30 AM",
        desc: "Nuestro servicio principal. Un espacio para la adoración congregacional y el estudio profundo de la Palabra en familia.",
        icon: "clock"
    },
    {
        day: "Miércoles",
        time: "7:30 PM",
        desc: "Los primeros tres miércoles de cada mes tenemos estudio bíblico. Los restantes tenemos culto de ministerios.",
        icon: "layers"
    }
];
---

<section id="encuentros" class="py-54 px-6 bg-slate-50/50 border-y border-slate-100">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16 reveal">
            <span class="text-xs uppercase tracking-[0.3em] font-bold text-ccer-accent mb-4 block">Comunidad en Movimiento</span>
            <h2 class="text-4xl md:text-6xl font-serif text-ccer-deep italic">Tiempos para encontrarnos.</h2>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 reveal">
            {schedules.map(item => (
                <div class="bg-white rounded-[2.5rem] p-8 md:p-10 border border-ccer-deep/10 shadow-subtle hover:shadow-soft transition-all group relative overflow-hidden">
                    <div class="flex items-center justify-between gap-4 mb-8 relative z-10">
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 bg-slate-100 rounded-full flex items-center justify-center text-ccer-deep group-hover:bg-ccer-deep group-hover:text-white transition-all duration-500">
                                {item.icon === 'clock' ? (
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                                ) : (
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
                                )}
                            </div>
                            <h3 class="text-2xl md:text-3xl font-serif text-ccer-deep">{item.day}</h3>
                        </div>
                        <div class="px-4 py-1.5 bg-slate-50 rounded-full border border-ccer-deep/5 font-bold text-ccer-deep text-[11px] md:text-xs tracking-[0.2em] whitespace-nowrap">
                            {item.time}
                        </div>
                    </div>
                    <p class="text-ccer-stone leading-relaxed font-light relative z-10">
                        {item.desc}
                    </p>
                </div>
            ))}
        </div>
    </div>
</section>