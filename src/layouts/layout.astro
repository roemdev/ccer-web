---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	image?: string;
	canonicalURL?: string;
}

const { 
	title, 
	description = "Un espacio en Santiago de los Caballeros para encontrarse con Dios con sinceridad y en libertad. Te esperamos cada domingo y miércoles.",
	image = "/og-image.jpg", // Debes crear esta imagen de 1200x630
	canonicalURL = Astro.url.href,
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Primario -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook / Instagram -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,300;0,9..144,600;1,9..144,400&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
        
        <slot name="head" /> <!-- Espacio para scripts específicos como JSON-LD -->
	</head>
	<body>
		<slot />
	</body>
</html>